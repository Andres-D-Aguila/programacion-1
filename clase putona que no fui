#include <iostream>
#include <conio.h>
#define MAX 100

using namespace std;

void cargar( int vec[] , int n)
{
	int i;
	cout<<"INTRODUCIR ELEMENTOS DEL VECTOR"<<endl;
	for(i=0;i<n;i++)
	{
		cout<<"introducir vec["<<i<<"]:";
		
	}
}
void mostrar( int vec[] , int n)
{
	int i;
	cout<<"LOS DATOS DEL VECTOR SON:"<<endl;
	for(i=0;i<n;i++)
	{
		cout<<"vec["<<i<<"] :"<<vec[i];
		cout<<endl;
	}
}
void main()
{
	int n , vec[MAX];
	cout<<"introduzca el tamaño del vector";
	cin>>n;
	cargar(vec, n);
	mostrar(vec ,n);
	getch();
}










#include <iostream>
#include <conio.h>
#define MAX 100

using namespace std;

void cargar( int vec[] , int n)
{
	int i,k=0;
	for(i=0;i<n;i++)
	{
		if(k==0)
		{
			vec[i]=1;
			k=1;
		}
		else{
			if(k==1)
			{
				vec[i]=2;
				k=2;
			}
			else
			{
				vec[i]=3;
				k=0;
			}
		}
	}
}
		
	

void mostrar( int vec[] , int n)
{
	int i;
	cout<<"LOS DATOS DEL VECTOR SON:"<<endl;
	for(i=0;i<n;i++)
	{
		cout<<"vec["<<i<<"] :"<<vec[i];
		cout<<endl;
	}
}
void main()
{
	int n , vec[MAX];
	cout<<"introduzca el tamaño del vector";
	cin>>n;
	cargar(vec, n);
	mostrar(vec ,n);
	getch();
}



#include <iostream>
#include <conio.h>
#define MAX 100

using namespace std;
void cargar1234(int vec[] , int n )
{
	int i,c=1,d=4,k=0;
	for(i=0;i<n;i++)
	{
	if(k==0 )
	{
		vec[i]=c;
		c++;
		if(c==4)
		{
			k=1;
		}
	}
	else{
		vec[i]=c;
		c--;
		if(c==1)
		{
			k=0;
		}
	}
	}
}


void cargar( int vec[] , int n)
{
	int i,k=0;
	for(i=0;i<n;i++)
	{
		if(k==0)
		{
			vec[i]=1;
			k=1;
		}
		else{
			if(k==1)
			{
				vec[i]=2;
				k=2;
			}
			else
			{
				vec[i]=3;
				k=0;
			}
		}
	}
}
		
	

void mostrar( int vec[] , int n)
{
	int i;
	cout<<"LOS DATOS DEL VECTOR SON:"<<endl;
	for(i=0;i<n;i++)
	{
		cout<<vec[i]<<"    ";
	}
}
void main()
{
	int n , vec[MAX];
	cout<<"introduzca el tamaño del vector";
	cin>>n;
	cargar1234(vec, n);
	mostrar(vec ,n);
	getch();
}


















#include <iostream>
#include <conio.h>
#define MAX 100

using namespace std;
int invertir(int n)
{
	int newnro=0,d;
	while(n>0)
	{
		d=n%10;
		newnro=(newnro*10)+d;
		n=n/10;
	}
	return(newnro);
}

int cantidadDigitos(int n)
{
	int c=0;
	while(n>0)
	{
		n=n/10;
	    c++;
	}
  return (c);
}

